{
  "name": "stl2d",
  "version": "1.0.0",
  "private": true,
  "description": "STL to 2D Drawing Projections Viewer",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace @stl2d/backend dev\" \"yarn workspace @stl2d/frontend dev\"",
    "dev:backend": "yarn workspace @stl2d/backend dev",
    "dev:frontend": "yarn workspace @stl2d/frontend dev",
    "build": "yarn build:contracts && yarn build:backend && yarn build:frontend",
    "build:contracts": "yarn workspace @stl2d/contracts build",
    "build:backend": "yarn workspace @stl2d/backend build",
    "build:frontend": "yarn workspace @stl2d/frontend build",
    "start": "yarn workspace @stl2d/backend start",
    "test": "yarn workspaces foreach -A run test",
    "check": "yarn workspaces foreach -A run check",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf apps/*/dist packages/*/dist node_modules/.cache"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.13.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.22"
}
